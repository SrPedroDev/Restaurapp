{% extends 'base.html.twig' %}


{% block styles %}
<style>
  .card-img-top {
    width: 100%;
    height: 180px;
    object-fit: contain;
    background-color: #f8f9fa; /* fondo claro para rellenar espacio */
  }
</style>
{% endblock %}



{% block cabezaApartado %}
  <h4 class="fw-bold text-center">{{ categoria.nombre }}</h4>
  <p class="text-center text-muted">Gestiona los productos de esta categor√≠a.</p>
  <div class="text-center mt-3 mb-2">
    <a href="{{ path('producto_nuevo', { categoriaId: categoria.id }) }}" class="btn btn-success">
      ‚ûï A√±adir producto
    </a>
  </div>
{% endblock %}

{% block contenidoApartado %}
  <div class="row mt-3 justify-content-center">

{% for producto in productos %}
  <div class="col-12 col-md-5 col-lg-4 mb-4">
    <div class="card h-100 shadow-sm">
      {% if producto.imagen %}
        <img src="{{ asset('uploads/productoImg/' ~ producto.imagen) }}" class="card-img-top" alt="Imagen de {{ producto.nombre }}">
      {% else %}
        <div class="card-img-top d-flex justify-content-center align-items-center bg-light text-muted" style="height: 180px;">
          Sin imagen disponible
        </div>
      {% endif %}
      <div class="card-body d-flex flex-column justify-content-between">
        <h5 class="card-title">{{ producto.nombre }}</h5>
        <p class="card-text">{{ producto.descripcion is not empty ? producto.descripcion : 'Sin descripci√≥n.' }}</p>
        <div class="mt-auto d-flex justify-content-between align-items-center">
          <span class="fw-bold text-success">{{ producto.precio | number_format(2, ',', '.') }} ‚Ç¨</span>
          <div>
            <a href="{{ path('producto_editar', { id: producto.id }) }}" class="btn btn-sm btn-outline-primary me-1">‚úèÔ∏è Editar</a>
            <a href="{{ path('producto_eliminar', { id: producto.id }) }}" 
               class="btn btn-sm btn-outline-danger"
               onclick="return confirm('¬øEst√°s seguro de que deseas eliminar este producto?')">üóëÔ∏è</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% else %}
  <p class="text-center mt-4">No hay productos en esta categor√≠a.</p>
{% endfor %}

  </div>
{% endblock %}
