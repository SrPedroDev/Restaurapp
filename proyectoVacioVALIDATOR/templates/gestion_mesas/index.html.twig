{% extends 'base.html.twig' %}

{% block cabezaApartado %}
<h2>Gestión de Mesas</h2>
<a href="{{ path('gestion_mesas_nueva') }}" class="btn btn-success mb-3">+ Nueva Mesa</a>
{% endblock %}

{% block contenidoApartado %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Identificador</th>
            <th>Nº Comensales</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for mesa in mesas %}
            <tr>
                <td>{{ mesa.id }}</td>
                <td>{{ mesa.identificador }}</td>
                <td>{{ mesa.capacidad }}</td>
                <td>
                    <a href="{{ path('gestion_mesas_editar', {id: mesa.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                    <a href="{{ path('gestion_mesas_eliminar', {id: mesa.id}) }}" class="btn btn-sm btn-danger"
                       onclick="return confirm('¿Seguro que deseas eliminar esta mesa?')">Eliminar</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4">No hay mesas registradas.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
